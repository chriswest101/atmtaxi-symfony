{% extends 'base.html.twig' %}

{% block body %}

<!-- Three -->
<section id="three" class="wrapper">
    <div class="inner">
        {% for message in app.flashes('warning') %}
            <div class="box" style="background: #ffb6b6;color: #fff;">
                {{ message }}
            </div>
        {% endfor %}
        <header class="align-center">
            <h2>Book a taxi now</h2>
            <p>Follow the simple steps below to book a Taxi with us</p>
        </header>
        <footer>
            <div class="align-center">
                <h2 class="icon fa-check"> Thank you for your booking request <span class="font-weight-bold">{{ name }}</span>!</h2>
                <p>We will get back to you on the number your provided soon.</p>
                <a class="button special icon fa-arrow-right" href="{{ path('homepage') }}">Return to our homepage</a>
            </div>
        </footer>
    </div>
</section>

{% endblock %}
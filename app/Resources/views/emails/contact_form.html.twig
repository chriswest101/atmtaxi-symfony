{% include 'emails/email_header.html.twig' %}

<!-- START CENTERED WHITE CONTAINER -->
<span class="preheader">Contact email from {{ content.content.name }}</span>
<table class="main">

    <!-- START MAIN CONTENT AREA -->
    <tr>
        <td class="wrapper">
            <table border="0" cellpadding="0" cellspacing="0">
                <tr>
                    <td>
                        <p>Hello,</p>
                        <p>A contact email has come through. The details are as follows.</p>
                        <table border="0" cellpadding="1" cellspacing="1">
                            <tbody>
                            <tr>
                                <td align="left">
                                    <table border="0" cellpadding="1" cellspacing="1">
                                        <tbody>
                                        <tr>
                                            <th align="right">Name:</th>
                                            <td>{{ content.name }}</td>
                                        </tr>
                                        <tr>
                                            <th align="right">Email:</th>
                                            <td>{{ content.email }}</td>
                                        </tr>
                                        <tr>
                                            <th align="right">Message:</th>
                                            <td>{{ content.message }}</td>
                                        </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                            </tbody>
                        </table>
                        <p>You can contact them via their email above or reply to this email to get in contact with them.</p>
                        <p>Regards,<br/>ATM Taxis</p>
                    </td>
                </tr>
            </table>
        </td>
    </tr>

    <!-- END MAIN CONTENT AREA -->
</table>

